<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vaccineName"
            type="String" />

        <variable
            name="vaccineNo"
            type="String" />

        <variable
            name="isEnabled"
            type="Boolean" />

        <variable
            name="backgroundTint"
            type="Integer" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="@{onClick}">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/vaccineNoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@{backgroundTint}"
            android:clickable="false"
            android:enabled="@{isEnabled}"
            android:minHeight="0dp"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:text="@{vaccineNo}"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="50" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/vaccineNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{vaccineName}"
            android:textAppearance="@style/Theme.Vaccine.Name"
            android:typeface="monospace"
            app:autoSizeMaxTextSize="10dp"
            app:autoSizeMinTextSize="9dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vaccineNoTV"
            app:textAllCaps="true"
            tools:text="covishield" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>