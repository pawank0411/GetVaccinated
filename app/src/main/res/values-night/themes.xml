<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetVaccinated" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GetVaccinated.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/blue_700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Footer" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Theme.Vaccine.Name" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.Chips" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="Theme.GetVaccinated.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GetVaccinated.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
    </style>

    <style name="Theme.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="trackTint">@color/track_selector</item>
        <item name="thumbTint">@color/thumb_selector</item>
    </style>

</resources>